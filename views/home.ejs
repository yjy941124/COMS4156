        <h1>Welcome to Forever Read</h1>
        <p>You can view books here!</p>
        <table class="100%" id = "book-table">
            <thead>
            <tr>
                <th>Book Name</th>
                <th>Writer Name</th>
                <th>Book Genre</th>

            </tr>
            </thead>

            <tbody>
            <% for(var i = 0; i < bookList.length; i++) {%>
            <tr>
                <th>
                    <% var bookID= bookIDs[i].toString() %>
                    <p hidden id="parse-book-id"><%=bookID%></p>
                    <a href= <%= "/books/"+bookIDs[i].toString() %>> <%= bookList[i].bookname.toString() %></a></th>
                <th><%= bookList[i].writerName.toString() %></th>
                <% if(bookList[i].bookgenre!=null){%>
                <th><%= bookList[i].bookgenre.toString()%></th>
                <% } else {%>
                <th>N/A</th>
                <% }%>
            </tr>
            <% } %>
            </tbody>
        </table>
    </div>
    <% if (user != null) { %>
    <p hidden id="parse-user"><%= (user.role).toString() %></p>
    <p hidden id="parse-user-id"><%= user._id%></p>
    <% } %>
