<link href="../public/css/profile.css" rel="stylesheet" type="text/css">
<script type="text/javascript" src="../../public/js/profile.js"></script>


<% if (user != null) { %>

<p hidden id="parse-user"><%= (user.role).toString() %></p>

<p hidden id="parse-user-id"><%= (user._id).toString() %></p>
<p hidden id="parse-dedicated-user-id"><%= (dedicated_userId.toString())%></p>

<% } %>


<div id = "banner">
    <h1 id = "webtitle">Forever Read</h1>
    <p id = "webdes">Write, Read, Communicate and Grow, Whenever You Like</p>

    <nav class="navbar navbar-default" id = "nav">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--clicking 'ForeverRead' go back to home page-->
                <a class="navbar-brand" href="/">Forever Read</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="/">Home <span class="sr-only">(current)</span></a></li>
                    <!--rank method to discussed-->
                    <!--<li><a href="#" onclick="sortBySubscribedNumber()">Rank</a></li>-->
                    <li><a href="/service/showranking">Ranking</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Category <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/service/searchBookByGenre/Comedy">Comedy</a></li>
                            <li><a href="/service/searchBookByGenre/Crime">Crime</a></li>
                            <li><a href="/service/searchBookByGenre/Detective">Detective</a></li>
                            <li><a href="/service/searchBookByGenre/Fantasy">Fantasy</a></li>
                            <li><a href="/service/searchBookByGenre/Fiction">Fiction</a></li>
                            <li><a href="/service/searchBookByGenre/Horror">Horror</a></li>
                            <li><a href="/service/searchBookByGenre/Other">Other</a></li>
                            <li><a href="/service/searchBookByGenre/Poetry">Poetry</a></li>
                            <li><a href="/service/searchBookByGenre/Prose">Prose</a></li>
                            <li><a href="/service/searchBookByGenre/Romance">Romance</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-left" action="/service/searchBookName" method="post">
                    <div class="form-group">
                        <input type="text" name="bookNameSearched" class="form-control typeahead" placeholder="Search bookname">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>

                <ul class="nav navbar-nav navbar-right">

                    <% if (user != null) {%>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Welcome, <%=username%> <span class="caret"></span></a>
                        <ul class="dropdown-menu">

                            <li><a id="profile-redirect-url" href="/profile" >
                                    Profile
                                </a></li>
                            <% if (user.role == "writer") {%>
                            <li><a id='publish' href='/publish'>Publish</a></li>
                            <%}%>
                            <li role="separator" class="divider"></li>
                            <li><a href="/logout">Log Out</a></li>

                        </ul>
                    </li>
                    <%}else {%>
                    <li><a href="/signin">
                            Sign in or Sign up
                        </a></li>
                    <%}%>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
</div>


<div id="container">

     <span id = "navline">
        <a href="/">HomePage</a>
        <p id = "profile-title"> > User Profile </p>
    </span>


    <div id = "all">
        <p hidden id="parse-user-id"><%=userID%></p>
        <p hidden id="parse-user-role"><%=userRole%></p>

        <% if (user!=null){%>
            <div id = "contact">
                <h3>Contact Info</h3>
                <p>Email Address: <%=user.emailaddr%></p>
            </div>
            <hr>
        <%}%>

        <% if (publication != null) {%>
            <div id="publication-list">
                <h3 id = "s1"> User Publications </h3>
                <table class="100%" id = "book-table">
                    <tr>
                        <th>Book Name</th>


                    </tr>
                    <% for(var i = 0; i < publication.length; i++) { %>
                    <tr>
                        <th>
                            <a href= <%= "/books/"+publication[i].book_id.toString() %>> <%= publication[i].bookname.toString()%></a></th>
                        </th>
                    </tr>
                    <% } %>
                </table>
            </div>
        <hr>
        <%}%>

        <% if (subscription!= null){%>
            <div id = "subscribe">
                <h3>User Subscriptions </h3>
                <table class="100%" id = "subscribed-book-table">
                    <tr>
                        <th>Book Name</th>

                    </tr>
                    <% for(var i = 0; i < subscription.length; i++) { %>
                    <tr>
                        <th>
                            <a href= <%= "/books/"+subscription[i].bookId.toString() %>> <%= subscription[i].bookname.toString()%></a></th>
                        </th>
                    </tr>
                    <% } %>
                </table>
            </div>
        <hr>
        <%}%>

        <div id = "back">
            <h4 id = "back1"><a href="/">Back to Home</a></h4>
        </div>
    </div>


</div>



